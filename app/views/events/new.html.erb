<h2 class="h1 mt-3 mb-4 ml-3 text-center">Create an event</h2>
<div class="container mt-5 form-group">
  <%= form_tag url_for(action: 'create'), method: "post" do %>
  <h1 class="h3 mb-3 font-weight-normal text-center">Event details</h1>
    <% if @event.errors.any? %>
      <p class="alert alert-danger d-flex justify-content-center" role="alert"">The following error(s) ocurred:
        <% @event.errors.full_messages.each do |message| %>
          <%= message %></p>
        <% end %>
      <p>Correct the form</p>
    <% end %>
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <div class="form-group">
  <%= label_tag 'Title' %>
  <%= text_field_tag 'title', @title, autofocus: true, class: 'form-control' %>
  </div>    
  <div class="form-group">
    <%= label_tag 'Location' %>
    <%= text_field_tag 'location', @location, autofocus: true, class: 'form-control' %>  
  </div>   
  <div class="form-group">
    <%= label_tag 'Starts at' %>
    <%= date_field_tag 'start_date', @startdate, autofocus: true, class: 'form-control' %>  
  </div>  
  <div class="form-group"> 
    <%= label_tag 'Duration' %>
    <%= number_field_tag 'duration', @duration, autofocus: true, class: 'form-control' %>  
  </div>
  <div class="form-group"> 
    <%= label_tag 'Price' %>
    <%= number_field_tag 'price', @price, autofocus: true, class: 'form-control' %>  
  </div>
  <div class="form-group"> 
    <%= label_tag 'Description_of_your_event' %>
    <%= text_field_tag 'description', @description, autofocus: true, class: 'form-control' %>  
  </div>
  <div class="actions mt-4 mb-3">
  <%= submit_tag "Make your event live", class:"btn btn-lg btn-dark btn-block" %>
  </div>
  <% end %>
</div>
